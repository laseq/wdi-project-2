<h1>Decks Show</h1>
<h3><%= deck.name %></h3>

<%= deck %>

<% if (deck.kanjis.length !== 0) { %>
  <div class="carousel carousel-slider center">
    <% deck.kanjis.forEach(kanji => { %>
      <div class="carousel-item white black-text">
        <h1 data-id="<%= kanji._id %>"><%= kanji.character %></h1>
        <p class="black-text"><%= kanji.meaning %></p>
      </div>
    <% }); %>
  </div>
  <div class="row">
    <div class="col s6 prev center-align black"><span class="flow-text white-text">Previous</span></div>
    <div class="col s6 next center-align black"><span class="flow-text white-text">Next</span></div>
  </div>
<% } else { %>
  <div class="no-kanji-in-deck">
    <p>Add some new kanji to this deck</p>
    <p>You can add them from your study and review sessions</p>
  </div>
<% } %>
